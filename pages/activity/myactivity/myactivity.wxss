/* pages/activity/myactivity/myactivity.wxss */
page{
    background: #eef3f9;
}
.container{
    margin-top: 20rpx;
  }
  scroll-view {
    width: 100%;
  }
  
  .item {
    width: 90%;
    height: 600rpx;
    margin: 60rpx auto;
    background: #fff;
    border-radius: 50rpx;
    text-align: center;
    padding-top: 10rpx;
    position: relative;
  }
  .img-view{
    width: 90%;
    height: 50%;
    margin: 30rpx;
  }
  .img {
    width: 100%;
    height: 100%;
    border-radius: 50rpx;
    object-fit: contain;
  }
  
  .title {
    font-size: 35rpx;
    font-weight:bolder;
    display: block;
    margin: 20rpx auto;
  }
  
  .gyhdHdsjKs {
    background-color: #d2f1d1;
    color: #a0da9a;
    border-radius: 50rpx;
    font-size: 30rpx;
    height: 60px;
    padding-left: 30rpx;
    padding-right: 30rpx;
    padding-top: 15rpx;
    padding-bottom: 15rpx;
  }
  .item .status{
  position: absolute;
  height: 200rpx;
  width: 200rpx;
  bottom: 0rpx;
  right: 0rpx;
  border-radius: 50rpx;
  overflow: hidden;
}
.statustxt{
  background-color: gray;
  color: white;
  width: 100%;
  height: 100%;
  line-height: 50rpx;
  text-align: center;
  margin-left: 50%;
  margin-top: 50%;
  position: absolute;
  transform: rotate(-45deg);
  font-size: 30rpx;
}
  
  .bottom-view{
    height: 100rpx;
    margin-bottom: 100rpx;
  }
  .loadmore {
    color: #888;
    font-size: 30rpx;
    line-height: 100rpx;
    text-align: center;
  }
  .qdstatus{
    width: 80%;
    margin-top: 30rpx;
    background-color: #bbd6f8;
    color: #fffcfc;
    border: none;
    border-radius: 25px;
  }

  /** 模态化窗口**/

  .mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }
  .signin_box {  
    width: 80%;  
    overflow: hidden;  
    position: fixed;  
    top: 20%;  
    left: 5%;  
    z-index: 1000;  
    background: #d7d7d7;  
    margin: 60rpx auto;  
    border-radius: 50rpx;  
    padding: 50rpx;
  }  

  .signin_content {  
    height: 600rpx;  
    overflow-y: scroll; /*超出父盒子高度可滚动*/  
  }  
  .msg-view{
    width: 100%;
    height: 40%;
  }
  .msg{
    font-size: 30rpx;
  }
  .msg-input{
    height: 70%;
    margin-top: 10rpx;
    background-color: #f8f8f8;
    border-radius: 20rpx;
  }
  .pic-view{
    width: 100%;
    height: 40%;
  }
  .pic{
    font-size: 30rpx;
  }
  .signinimg-view{
    width: 90%;
    height: 80%;
    margin: 10rpx;
    display:flex; 
    justify-content:center;
    align-items:center;
  }
  .signinimg{
    width: 100%;
    height: 150rpx;
    margin: 10rpx;
    margin-top: 80rpx;
    box-shadow: 0 0 0 1px black;
  }
  .btn-view{
    display: flex;
    height: 80rpx;
    width: 100%;

  }
  .btn-cancel{
    width: 50%;
    height: 60rpx;
    background-color: #fff;
    color: #000;
    border-radius: 10rpx;
    text-align: center;
    padding: 5rpx;
    margin-right: 50rpx;
  }
  .btn-confirm{
    width: 50%;
    height: 60rpx;
    background-color: #1890ff;
    color: #fff;
    border-radius: 10rpx;
    text-align: center;
    padding: 5rpx;
    margin-left: 50rpx;
  }
