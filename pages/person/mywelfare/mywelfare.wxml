<!--pages/person/mywelfare/mywelfare.wxml-->
<authorization>
    
    <view class="selector">
        <view bindtap="choose" data-spddstatus="null" class="all" style="background-color: {{allbackcolor}};color: {{allcolor}};">全部</view>
        <view bindtap="choose" data-spddstatus="0" class="hx" style="background-color: {{hxbackcolor}};color: {{hxcolor}};">待核销</view>
    </view>
    <view class="container">
      <!--垂直滚动，这里必须设置高度-->
        <scroll-view scroll-top="{{scrollTop}}" scroll-y="true" style="height:{{scrollHeight}}px;" 
            class="list" bindscrolltolower="bindDownLoad" bindscrolltoupper="topLoad"  bindscroll="scroll">
        <view class="item" wx:key = "*this" wx:for="{{list}}" data-hxid="{{item.hxid}}">
           
            
            <view hidden="true">{{item.orderId}}</view>
            <view class="bh">订单编号：{{item.orderBh}}</view>
            <view class="content">商品名称：{{item.flspMc}}</view>
            <view class="content">下单人：{{item.orderBy}}</view>
            <view hidden="true">{{item.flspId}}</view>
            
            <view class="content">核销人员：{{item.createBy}}</view>
            <view class="content">核销时间：{{item.hxTime}}</view>
            
            <button class="spddStatus" data-bmid="{{item.bmid}}" data-spddStatus="{{item.spddStatus}}" bindtap="hx" data-orderid="{{item.orderId}}">
                    {{item.spddStatustxt}}
                </button>
        </view>
        <view class="loadmore" wx:if="{{bottom}}">
                ---没有更多了---
            </view>
        </scroll-view>
        <view class="body-view">
            <loading hidden="{{hidden}}" bindchange="loadingChange">
                加载中...
            </loading>
        </view>
    </view>
</authorization>