/* pages/person/myinfo/myinfo.wxss */
.head{
    position: relative;
    display: inline-block;
    padding-left: 20px;
    margin-top: 15px;
    margin-bottom: 15px;
    width: 95%;
    height: 150rpx;
}
.headbtn{
    
    background-color: #fff;
    float:left;
}
.img{
    margin-left: -30rpx;
    width: 66px;
    height: 66px;
    border-radius: 50%;
    border: 4px solid #fff;
    box-shadow: 0px 0px 5px rgba(0,0,0,0.4);
    float:left;
}
.username-mobile{
    margin-left: 40rpx;
    margin-top: 10rpx;
    padding: 5rpx;
    float:left;
}
.username {
    padding: 10rpx;
}
.mobile{
    font-size: 25rpx;
    padding: 10rpx;
}
.person-container{
    position:fixed;
    width: 100%;
    height: 100%;
    background: #eef3f9;
    padding-top: 30rpx;
}
.person-sub{
    width: 95%;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    border-bottom:1px solid #b5b6c4;
    background: #fff;
}
.text{
    height: 100%;
    float: left;
    font-size: 35rpx;
    text-align: left;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 30rpx;
}
.right{
    height: 100%;
    float: right;
    margin-right: 30rpx;
    text-align: right;
    display: flex;
    justify-content: center;
    align-items: center;
}
.rightimg{
    width: 30rpx;
    height: 100%;
}
.saveview{
    padding: 10rpx;
    background-color: #f5f5f5;
}

.savebtn{
width: 80%;
margin-top: 20rpx;
background-color: #ff6a63;
color: #fffcfc;
border: none;
border-radius: 25px;
}