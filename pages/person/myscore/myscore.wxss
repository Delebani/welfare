/* pages/person/myscore/myscore.wxss */
page{
    width: 100%;
    height: 100%;
}
.score-container{
    position:fixed;
    display: inline-block;
    width: 100%;
    height: 100%;
    background: #eef3f9;
}
.statistics{
    position: relative;
    display: inline-block;
    width: 100%;
    height: 180rpx;
    background: linear-gradient(#fb5133,#faa495);
    padding: 25rpx;
}
.score{
    width: 20%;
    height: 100%;
    float: left;
}
.score-sub{
    width: 100%;
    height: 50%;
    color: #fff;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

.picker-container{
    display: flex;
    align-items: center;
    width: 100%;
    height: 80rpx;
    background-color: #fff;

  }
  .bglxpicker{
    font-size: 35rpx;
    padding: 10rpx;
    width: 45%;
    flex-direction: row;
    text-align: center;
    font-weight: bolder;
  }
  .bgqdpicker{
    font-size: 35rpx;
    padding: 10rpx;
    width: 45%;
    flex-direction: row;
    text-align: center;
    font-weight: bolder;
  }
  

.container{
    margin-top: 20rpx;
  }
  scroll-view {
    width: 100%;
  }
  
  .item {
    width: 90%;
    height: 300rpx;
    margin: 20rpx auto;
    background: #fff;
    border-radius: 50rpx;
    text-align: center;
    padding-top: 10rpx;
    position: relative;
    padding-left: 50rpx;
  }
  .op{
    margin-top: 20rpx;
    text-align: left;
    font-size: 35rpx;
    border-bottom:1px solid #b5b6c4;
    padding-bottom: 30rpx;
}
.content{
    margin-top: 20rpx;
    text-align: left;
    font-size: 30rpx;
    color: #9b9b9b;
}
  .bottom-view{
    height: 100rpx;
    margin-bottom: 100rpx;
  }
  .loadmore {
    color: #888;
    font-size: 30rpx;
    line-height: 100rpx;
    text-align: center;
  }