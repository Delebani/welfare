/* pages/person/person.wxss */
.head{
    position: relative;
    display: inline-block;
    padding-left: 20px;
    margin-top: 15px;
    margin-bottom: 15px;
    width: 95%;
    height: 150rpx;
}
.img{
    width: 66px;
    height: 66px;
    border-radius: 50%;
    border: 4px solid #fff;
    box-shadow: 0px 0px 5px rgba(0,0,0,0.4);
    float:left;
}
.username-mobile{
    margin-left: 40rpx;
    margin-top: 10rpx;
    padding: 5rpx;
    float:left;
}
.username {
    padding: 10rpx;
}
.mobile{
    font-size: 25rpx;
    padding: 10rpx;
}
.qrcodeimg-view{
    float: left;
    height: 100%;
    width: 50rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 30rpx;
}
.qrcodeimg{
    height: 100%;
    width: 100%;
}
.setimg-view{
    float: right;
    height: 100%;
    width: 50rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 20rpx;
}
.setimg{
    height: 100%;
    width: 100%;
}
.person-container{
    position:fixed;
    width: 100%;
    height: 100%;
    background: #eef3f9;
    padding-top: 30rpx;
}
.person-sub{
    width: 95%;
    height: 120rpx;
    line-height: 80rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    border-bottom:1px solid #b5b6c4;
    background: #fff;
}
.person-img-view{
    width: 50rpx;
    height: 100%;
    float: left;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}
.person-img{
    width: 100%;
    height: 100%;
}
.text{
    height: 100%;
    float: left;
    font-size: 35rpx;
    text-align: left;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 30rpx;
}
.right{
    height: 100%;
    width: 35rpx;
    float: right;
    margin-right: 30rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}
.rightimg{
    width: 100%;
    height: 100%;
}